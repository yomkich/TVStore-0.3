@model IEnumerable<TVStore.Models.TV>
@{
    ViewData["Title"] = "Каталог товаров";
}

    <h3>Телевизоры</h3>
<table class="table-condensed" cellspacing="5" cellpadding="10" border="0" width="100%">
    <tr>
        <td>Внешний вид</td>
        <td>Модель</td>
        <td>Производитель</td>
        <td>Цена</td>
        <td></td>
    </tr>
    @foreach (var TV in Model)
    {
        <tr>
            @*<td><img src="~/hyundai.jpg" /></td>*@
            @*<td>@TV.ImgSource</td>*@
            <td>@TV.Name</td>
            <td>@TV.Company</td>
            <td>@TV.Price</td>
            <td><a href="~/Home/Buy/@TV.Id">Купить</a></td>
        </tr>
           }
	</table>